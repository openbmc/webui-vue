{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "types": ["node", "vite/client"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "noEmit": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.vue",
        "scripts/**/*.ts",
        "orval.config.ts"
    ],
    "exclude": ["node_modules", "dist"]
}
